@model Encuesta.Tarea2.MVC.Models.EncuestaViewModel

@{
    ViewBag.Title = "Encuesta";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-7 col-lg-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h2 class="card-title text-center mb-4">Encuesta de Destinos de Viaje</h2>
                @using (Html.BeginForm("Encuesta", "Home", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        @Html.LabelFor(m => m.Nombre, htmlAttributes: new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", placeholder = "Ingrese su nombre" })
                        @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(m => m.Apellido, htmlAttributes: new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Apellido, new { @class = "form-control", placeholder = "Ingrese su primer apellido" })
                        @Html.ValidationMessageFor(m => m.Apellido, "", new { @class = "text-danger" })
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(m => m.Pais, htmlAttributes: new { @class = "form-label" })
                        @Html.DropDownListFor(m => m.Pais, new SelectList(Model.Paises), "-- Seleccione --", new { @class = "form-select" })
                        @Html.ValidationMessageFor(m => m.Pais, "", new { @class = "text-danger" })
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(m => m.Rol, htmlAttributes: new { @class = "form-label" })
                        @Html.DropDownListFor(m => m.Rol, new SelectList(Model.Roles), "-- Seleccione --", new { @class = "form-select" })
                        @Html.ValidationMessageFor(m => m.Rol, "", new { @class = "text-danger" })
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(m => m.DestinoPrimario, "Destino Primario", htmlAttributes: new { @class = "form-label" })
                        @Html.DropDownListFor(m => m.DestinoPrimario, new SelectList(Model.Destinos), "-- Seleccione --", new { @class = "form-select" })
                        @Html.ValidationMessageFor(m => m.DestinoPrimario, "", new { @class = "text-danger" })
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(m => m.DestinoSecundario, "Destino Secundario", htmlAttributes: new { @class = "form-label" })
                        @Html.DropDownListFor(m => m.DestinoSecundario, new SelectList(Model.Destinos), "-- Seleccione --", new { @class = "form-select" })
                        @Html.ValidationMessageFor(m => m.DestinoSecundario, "", new { @class = "text-danger" })
                    </div>
                    <div class="justify-content-center">
                        <button type="submit" class="btn btn-success px-4">Guardar</button>
                        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-outline-secondary" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}